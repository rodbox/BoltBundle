{% extends app.request.isxmlhttprequest ? '::base.html.twig' : 'AdminBundle::index.html.twig' %}
{% set crudEntity = "RBBoltBundle:item" %}

{% block body %}
{{ form_start(form, {action:path("bolt_item_new"),attr:{class:"form-live"}}) }}    {{ form_row(form.name,{attr: {class: "form-control"}} ) }}
    {{ form_row(form.description,{attr: {class: "form-control"}} ) }}
    {{ form_row(form.context,{attr: {class: "form-control"}} ) }}
    {{ form_row(form.view,{attr: {class: "form-control"}} ) }}
    {{ form_row(form.multiple,{attr: {class: "form-control"}} ) }}
    {{ form_row(form.type,{attr: {class: "form-control"}} ) }}


    <div class="form-footer">
        <button type="submit" class="btn btn-success btn-crud-submit">{{"action.save"|trans}}</button>
    </div>
{{ form_end(form) }}
{% endblock %}
